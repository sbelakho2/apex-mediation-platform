{
  "name": "rival-ad-stack",
  "version": "0.1.0",
  "description": "Unity-rival ad mediation platform with OTA-proof reliability",
  "private": true,
  "workspaces": [
    "backend",
    "console",
    "packages/*",
    "sdk/*",
    "quality/*",
    "tools/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspaces --if-present",
    "test:integration": "npm run test:integration --workspaces --if-present",
    "test:backend": "npm --prefix backend run test:backend",
    "test:load": "k6 run quality/load-tests/auction-load-test.js",
    "test:load:billing-pdf": "k6 run quality/perf/billing/pdf-load.js",
    "test:chaos": "cd quality/chaos && ./run-experiments.sh",
    "lint": "npm run lint --workspaces --if-present",
    "migrate": "npm run migrate --workspace=backend",
    "seed:testdata": "npm run seed:testdata --workspace=backend",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "dev:console": "npm run dev --workspace=console",
    "dev:backend": "docker-compose up",
    "prepare": "husky install || true",
    "capture:website": "bash scripts/capture-website.sh",
    "capture:console": "bash scripts/capture-console.sh",
    "capture:all": "npm run capture:website && npm run capture:console"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.6",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bel-consulting/rival-ad-stack.git"
  },
  "keywords": [
    "ad-mediation",
    "unity-alternative",
    "mobile-advertising",
    "ad-stack",
    "monetization"
  ],
  "author": "Bel Consulting OÃœ",
  "license": "PROPRIETARY",
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  }
}
