{
  "annotations": { "list": [] },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "stat",
      "title": "Request Rate (req/s)",
      "gridPos": { "w": 8, "h": 4, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count{service=~\"$service\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "5xx Error Rate (%)",
      "gridPos": { "w": 8, "h": 4, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count{service=~\"$service\",status_code=~\"5..\"}[5m])) / sum(rate(http_request_duration_seconds_count{service=~\"$service\"}[5m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "p95 Latency (ms)",
      "gridPos": { "w": 8, "h": 4, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m])) by (le)) * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 200 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "HTTP Request Rate (per route)",
      "targets": [
        {
          "expr": "sum by (route) (rate(http_request_duration_seconds_count{service=~\"$service\"}[5m]))",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "gridPos": { "w": 24, "h": 8, "x": 0, "y": 4 }
    },
    {
      "type": "timeseries",
      "title": "HTTP 5xx Error Rate (per route)",
      "targets": [
        {
          "expr": "sum by (route) (rate(http_request_duration_seconds_count{service=~\"$service\",status_code=~\"5..\"}[5m]))",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "gridPos": { "w": 12, "h": 8, "x": 0, "y": 12 }
    },
    {
      "type": "timeseries",
      "title": "HTTP Latency p95 (ms) by route",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, route) (rate(http_request_duration_seconds_bucket{service=~\"$service\"}[5m]))) * 1000",
          "legendFormat": "p95 {{route}}",
          "refId": "A"
        }
      ],
      "gridPos": { "w": 12, "h": 8, "x": 12, "y": 12 }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 36,
  "style": "dark",
  "tags": ["api", "red"],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "label": "Service",
        "datasource": "Prometheus",
        "definition": "label_values(http_request_duration_seconds_count, service)",
        "query": "label_values(http_request_duration_seconds_count, service)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": false,
        "current": { "text": "All", "value": ".*" },
        "sort": 1
      }
    ]
  },
  "timezone": "",
  "title": "API RED & Latency",
  "version": 2
}
