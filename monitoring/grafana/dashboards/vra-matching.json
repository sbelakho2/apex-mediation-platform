{
  "$schema": "https://grafana.com/schemas/v0/dashboard.schema.json",
  "title": "VRA â€” Matching Funnel",
  "uid": "vra-matching",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["vra", "recon", "matching"],
  "time": { "from": "now-24h", "to": "now" },
  "panels": [
    {
      "type": "timeseries",
      "title": "Matching runs (rate)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(vra_match_duration_seconds_count[5m]))" }
      ]
    },
    {
      "type": "heatmap",
      "title": "Match duration histogram",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "histogram_quantile(0.95, sum by (le)(rate(vra_match_duration_seconds_bucket[5m])))" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Candidates evaluated (rate)",
      "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(vra_match_candidates_total[5m]))" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Auto / Review / Unmatched",
      "gridPos": { "x": 8, "y": 8, "w": 16, "h": 8 },
      "targets": [
        { "refId": "A", "expr": "sum(rate(vra_match_auto_total[5m]))", "legendFormat": "auto" },
        { "refId": "B", "expr": "sum(rate(vra_match_review_total[5m]))", "legendFormat": "review" },
        { "refId": "C", "expr": "sum(rate(vra_match_unmatched_total[5m]))", "legendFormat": "unmatched" }
      ]
    },
    {
      "type": "stat",
      "title": "Exact matches (24h)",
      "gridPos": { "x": 0, "y": 16, "w": 6, "h": 6 },
      "targets": [ { "refId": "A", "expr": "sum(increase(vra_match_exact_total[24h]))" } ]
    }
  ]
}
