{
  "dashboard": {
    "title": "Backend API - RED Metrics by Route",
    "tags": ["backend", "api", "red"],
    "timezone": "browser",
    "schemaVersion": 38,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "timeseries",
        "title": "Request Rate by Route (req/s)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (route, method)",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Error Rate by Route (%)",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) by (route) / sum(rate(http_requests_total[5m])) by (route) * 100",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "palette-classic" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "timeseries",
        "title": "Request Duration p50/p95/p99 by Route",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[5m])) by (route, le)) * 1000",
            "legendFormat": "{{route}} p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (route, le)) * 1000",
            "legendFormat": "{{route}} p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (route, le)) * 1000",
            "legendFormat": "{{route}} p99",
            "refId": "C"
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 4,
        "type": "table",
        "title": "Top Slowest Routes (p95)",
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (route, le)))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true, "__name__": true },
              "renameByName": { "route": "Route", "Value": "p95 Duration (s)" }
            }
          }
        ]
      },
      {
        "id": 5,
        "type": "table",
        "title": "Top Error Routes (5xx)",
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) by (route, status_code))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true, "__name__": true },
              "renameByName": { "route": "Route", "status_code": "Status", "Value": "Error Rate (req/s)" }
            }
          }
        ]
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Overall Request Rate",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 500, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "type": "stat",
        "title": "Overall Error Rate",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "type": "stat",
        "title": "Overall p95 Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 200, "color": "yellow" },
                { "value": 300, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "type": "stat",
        "title": "Overall p99 Latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 500, "color": "yellow" },
                { "value": 750, "color": "red" }
              ]
            }
          }
        }
      }
    ]
  }
}
