{
  "name": "apexmediation-backend",
  "version": "1.0.0",
  "description": "ApexMediation Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:secure": "infisical run --env=development -- nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:secure": "infisical run --env=production -- node dist/src/index.js",
    "test": "jest --passWithNoTests",
    "test:secure": "infisical run --env=development -- jest --passWithNoTests",
    "test:unit": "jest --passWithNoTests --testPathIgnorePatterns=integration",
    "test:integration": "jest --passWithNoTests --testPathPattern=integration --runInBand",
    "test:watch": "jest --passWithNoTests --watch",
    "lint": "eslint src --ext .ts",
    "migrate": "node scripts/runMigrationsV2.js",
    "migrate:legacy": "node scripts/runMigrations.js",
    "migrate:down": "node scripts/runMigrationsV2.js --down",
    "migrate:secure": "infisical run --env=development -- node scripts/runMigrations.js",
    "migrate:production": "infisical run --env=production -- node scripts/runMigrations.js",
    "seed:testdata": "node scripts/seedTestData.js",
    "clickhouse:init": "ts-node scripts/initClickHouseSchema.ts",
    "clickhouse:migrate": "node scripts/runClickHouseMigrations.js",
    "clickhouse:migrate:down": "ALLOW_CH_DOWN=1 node scripts/runClickHouseMigrations.js --down",
    "secrets:migrate": "node scripts/migrate-secrets-to-infisical.js",
    "enrichment:refresh": "ts-node scripts/refreshEnrichmentCache.ts",
    "verify:transparency": "ts-node scripts/transparency-verify.ts",
    "transparency:metrics-check": "ts-node scripts/checkTransparencyMetrics.ts",
    "verify:migrations": "node scripts/verifyMigrations.js",
    "transparency:smoke": "bash ../scripts/dev-transparency-metrics.sh"
  },
  "keywords": [
    "ad-mediation",
    "rtb",
    "advertising"
  ],
  "author": "Bel Consulting OÃœ",
  "license": "PROPRIETARY",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@aws-sdk/client-s3": "^3.922.0",
    "@clickhouse/client": "^1.12.1",
    "@fast-csv/format": "^5.0.5",
    "@google-cloud/bigquery": "^8.1.1",
    "@google-cloud/storage": "^7.17.2",
    "@maxmind/geoip2-node": "^6.2.0",
    "@types/axios": "^0.14.4",
    "@types/bull": "^3.15.9",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.63.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.2.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "fast-xml-parser": "^5.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "node-cron": "^4.2.1",
    "openai": "^6.8.0",
    "parquetjs-lite": "^0.8.7",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "prom-client": "^15.1.3",
    "redis": "^4.6.11",
    "resend": "^6.4.0",
    "stripe": "^19.2.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.17.3",
    "@types/pg": "^8.11.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
