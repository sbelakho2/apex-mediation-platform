{
  "name": "apexmediation-backend",
  "version": "1.0.0",
  "description": "ApexMediation Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:secure": "infisical run --env=development -- nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:secure": "infisical run --env=production -- node dist/src/index.js",
    "test": "jest -c ./jest.config.cjs --passWithNoTests",
    "test:backend": "jest -c ./jest.config.cjs --passWithNoTests",
    "test:secure": "infisical run --env=development -- jest -c ./jest.config.cjs --passWithNoTests",
    "test:fast": "jest -c ./jest.config.cjs --passWithNoTests",
    "test:db": "FORCE_DB_SETUP=true RUN_MIGRATIONS_IN_TEST=true jest -c ./jest.config.cjs --passWithNoTests --runInBand",
    "test:db:docker": "docker compose -f ../docker-compose.yml up -d postgres && FORCE_DB_SETUP=true RUN_MIGRATIONS_IN_TEST=true jest --passWithNoTests --runInBand",
    "test:db:down": "docker compose -f ../docker-compose.yml down --remove-orphans",
    "test:unit": "jest -c ./jest.config.cjs --passWithNoTests --testPathIgnorePatterns=integration",
    "test:integration": "jest -c ./jest.config.cjs --passWithNoTests --testPathPattern=integration --runInBand",
    "test:watch": "jest -c ./jest.config.cjs --passWithNoTests --watch",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"src/**/__tests__/**\"",
    "migrate": "node scripts/runMigrationsV2.js",
    "migrate:legacy": "node scripts/runMigrations.js",
    "migrate:down": "node scripts/runMigrationsV2.js --down",
    "migrate:secure": "infisical run --env=development -- node scripts/runMigrations.js",
    "migrate:production": "infisical run --env=production -- node scripts/runMigrations.js",
    "seed:testdata": "node scripts/seedTestData.js",
    "secrets:migrate": "node scripts/migrate-secrets-to-infisical.js",
    "enrichment:refresh": "ts-node scripts/refreshEnrichmentCache.ts",
    "verify:transparency": "ts-node scripts/transparency-verify.ts",
    "transparency:metrics-check": "ts-node scripts/checkTransparencyMetrics.ts",
    "verify:migrations": "node scripts/verifyMigrations.js",
    "transparency:smoke": "bash ../scripts/dev-transparency-metrics.sh",
    "qa:billing-emails": "ts-node scripts/generateBillingEmailSamples.ts",
    "sandbox:bootstrap": "node scripts/setupSandboxNetworks.js",
    "sandbox:revenue": "node scripts/generateSandboxRevenue.js",
    "sandbox:revenue:starter": "node scripts/generateSandboxRevenue.js --tier=starter",
    "sandbox:revenue:growth": "node scripts/generateSandboxRevenue.js --tier=growth",
    "sandbox:revenue:scale": "node scripts/generateSandboxRevenue.js --tier=scale",
    "verify:db": "ts-node scripts/verifyDb.ts",
    "verify:redis": "ts-node scripts/verifyRedis.ts",
    "verify:storage": "ts-node scripts/verifyStorage.ts"
  },
  "keywords": [
    "ad-mediation",
    "rtb",
    "advertising"
  ],
  "author": "Bel Consulting OÃœ",
  "license": "PROPRIETARY",
